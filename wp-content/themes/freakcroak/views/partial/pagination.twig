{% if posts.pagination.pages is not empty %}
    <nav class="pagination-block">
        <ul class="pagination">

            {# Previous #}
            {% if posts.pagination.prev %}
                <li class="prev btn prev-btn">
                    <a href="{{ posts.pagination.prev.link }}">Preview</a>
                </li>
            {% else %}
                <li class="prev btn disabled prev-btn-disabled">
                    <button disabled>Preview</button>
                </li>
            {% endif %}

            {# Pages #}
            {% for page in posts.pagination.pages %}
                {% if page.link %}
                    <li  class="{{ page.class }}">
                        <a href="{{ page.link }}">{{ page.title }}</a>
                    </li>
                {% else %}
                    <li class="current {{ page.class }}">
                        {{ page.title }}
                    </li>
                {% endif %}
            {% endfor %}

            {# Next #}
            {% if posts.pagination.next %}
                <li class="next btn next-btn">
                    <a href="{{ posts.pagination.next.link }}">Next</a>
                </li>
            {% else %}
                <li class="next btn disabled next-btn-disabled">
                    <button disabled>Next</button>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}
