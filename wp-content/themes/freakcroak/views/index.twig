{% extends "layouts/main.twig" %}

{% block content %}
	<div class="container-fluid teaser-posts">
		<div class="limiter">
			<div class="row">
				{% for post in posts %}
					{% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
				{% endfor %}

				<div class="col-12">{% include 'partial/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}</div>
			</div>
		</div>
	</div>
{% endblock %}
