{% extends "layouts/main.twig" %}

{% block content %}
	{% for post in posts %}
		{% set post_type = post.post_type %}
	{% endfor %}

	<div class="block-teaser {{ post_type }} container-fluid">
		<h2 class="title-filters h1">{{ wp_title }}</h2>

		<div class="row">
			<div class="col-12 col-md-4 col-lg-3 filter-section">
				<div class="filter">
					<div class="header-filter">
						<div class="header-filter-title">Filters</div>
					</div>

					<nav class="filters">
						<ul class="filter-list">
							<li class="filter-item"><a href="#">All News</a></li>
							<li class="filter-item"><a href="#">About SolveIQ</a></li>
							<li class="filter-item"><a href="#">From SolveIQ</a></li>
							<li class="filter-item"><a href="#">Industry News</a></li>
							<li class="filter-item"><a href="#">Technology</a></li>
						</ul>
					</nav>
				</div>
			</div>
			<div class="col-12 col-md-8 col-lg-9 items-section">
				{% for post in posts %}
					{% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
				{% endfor %}

				{% include 'partial/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}
			</div>
		</div>
	</div>
{% endblock %}
